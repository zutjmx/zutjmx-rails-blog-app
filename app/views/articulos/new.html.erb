<h1>Nuevo Artículo</h1>
<p>Se va a crear un nuevo artículo</p>

<%= form_for @articulo do |f| %>
    
    <div class="container">
        <div class="field form-group">
            <%= f.label :titulo %> <br/>
            <%= f.text_field :titulo %> <br/>
        </div>

        <div class="field form-group">
            <%= f.label :contenido %> <br/>
            <%= f.text_area :contenido %> <br/>
        </div>
        
        <div class="actions">
            <%= f.submit "Crear Artículo", disable_with: 'Submiting...', class: "btn btn-primary" %>
        </div>
    </div>
    
<% end %>
